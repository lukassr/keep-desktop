{
  "name": "keepdesktop",
  "productName": "Keep Desktop",
  "version": "0.3.1",
  "description": "Google Keep Desktop App",
  "electronVersion": "0.36.0",
  "main": "app/index.js",
  "files": [
    "build",
    "app"
  ],
  "scripts": {
    "start": "electron .",
    "lint": "standard",
    "pack": "electron-builder --dir",
    "dist": "npm run dist:mac && npm run dist:linux && npm run dist:win",
    "dist:mac": "electron-builder --mac",
    "dist:linux": "electron-builder --linux",
    "dist:win": "electron-builder --win",
    "postinstall": "electron-builder install-app-deps"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lukassr/keep-desktop"
  },
  "keywords": [
    "electron-app",
    "electron",
    "google",
    "keep"
  ],
  "author": "Lukas Svicarovic <svicarovic@gmail.com> (https://github.com/lukassr)",
  "bugs": {
    "url": "https://github.com/lukassr/keep-desktop/issues"
  },
  "homepage": "https://github.com/lukassr/keep-desktop",
  "dependencies": {
    "array-unique": "^0.3.2",
    "electron-config": "^1.0.0",
    "electron-debug": "^1.0.1"
  },
  "devDependencies": {
    "electron": "^11.5.0",
    "electron-builder": "^22.2.0",
    "standard": "^10.0.3"
  },
  "build": {
    "appId": "com.lukassr.keep-desktop",
    "directories": {
      "output": "build"
    },
    "files": [
      "**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "dmg": {
      "iconSize": 160,
      "contents": [
        {
          "x": 180,
          "y": 170
        },
        {
          "x": 480,
          "y": 170,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "category": "Utility",
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    }
  }
}
